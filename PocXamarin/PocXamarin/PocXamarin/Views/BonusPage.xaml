<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PocXamarin.Views.BonusPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            Spacing="15"
            VerticalOptions="Center">
            <Button Command="{Binding LocationCommand}" Text="Get Location" />
            <Label Text="{Binding LblResult}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>